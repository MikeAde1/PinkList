<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.mike.pinklist.EditProfile">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FDE1E9"
                android:paddingBottom="10dp"
                app:titleTextColor="@color/midnightBlue"
                app:title="EDIT PROFILE"
                android:minHeight="?attr/actionBarSize"
                android:theme="?attr/actionBarTheme" />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:textStyle="bold"
                android:background="@drawable/todo"
                android:textColor="@color/colorPrimary"
                android:paddingTop="20dp"
                android:paddingLeft="25dp"
                android:textSize="23sp"
                android:maxLines="1"
                android:paddingBottom="35dp"
                android:hint="@string/full_name"
                android:textColorHint="#9B92AC"
                android:id="@+id/fullname" />
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_marginLeft="22dp"
                    android:layout_marginRight="22dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/change_email"
                    android:text="@string/email"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="@dimen/text_margin"
                    android:textColor="@color/colorPrimaryDark" />
                <EditText
                    android:maxLines="1"
                    android:id="@+id/edit"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:hint="john@email.com"
                    android:textSize="15sp"
                    android:paddingLeft="15dp"
                    android:inputType="textEmailAddress"
                    android:textColorHint="@color/silver"
                    android:background="@drawable/selection"/>

                <android.support.design.widget.FloatingActionButton
                    android:layout_gravity="center"
                    android:layout_alignParentBottom="true"
                    android:id="@+id/fbb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="230dp"
                    android:clickable="true"
                    app:backgroundTint="@color/midnightBlue"
                    app:fabSize="normal"
                    app:srcCompat="@drawable/ic_done_white_24dp" />
                    </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
